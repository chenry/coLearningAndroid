<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SubscriptionItemDetailActivity" >

    <TextView
        android:id="@+id/txtSubscriptionItemTitleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subscription_item_title" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtSubscriptionItemTitleLabel"
        android:layout_below="@+id/txtSubscriptionItemTitleLabel"
        android:text="Link URL" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:text="FileUrl" />

    <TextView
        android:id="@+id/txtItemTitleValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtItemLinkUrlValue"
        android:layout_marginLeft="26dp"
        android:layout_toRightOf="@+id/textView5"
        android:text="ItemTitle" />

    <TextView
        android:id="@+id/txtItemLinkUrlValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtItemTitleValue"
        android:layout_below="@+id/txtSubscriptionItemTitleLabel"
        android:text="ItemLinkURL" />

    <TextView
        android:id="@+id/txtItemFileUrlValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/txtItemTitleValue"
        android:text="FileUrlValue" />

</RelativeLayout>